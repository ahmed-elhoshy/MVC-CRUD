@model IEnumerable<Student>
@{
	ViewBag.Title = "Students List";
	// Model.Add(new Student { Id = 0, Name = "Select" }); if you want to add a value use list<Student> instead of IEnumerable<Student>
}

<!DOCTYPE html>

	<a href="/students/create" class="btn btn-primary">Create</a>
	<table class=" table table-bordered table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Age</th>
				<th>Department</th>
			</tr>
		</thead>
		<tbody>
			@if(Model.Count()==0)
			{
				<tr>
					<td colspan="4"> No students exist </td>
				</tr>
			}
			else
			{
				foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@item.Age</td>
						<td>@item.Department.Name</td>
						<td>
							<a asp-action="Details" asp-controller="Students" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
							<a asp-action="Edit" asp-controller="Students" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
							<a onclick="return confirm('Are you sure you want to delete ?')" asp-action="Delete" asp-controller="Students" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

						</td>
					</tr>
				}
			}
			
		</tbody>


    </table>

