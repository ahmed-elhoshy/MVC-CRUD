@model Student
@{
	SelectList deptsList = new SelectList(ViewBag.Departments, "Id", "Name");
}

<div class="form-group">
	<label asp-for="Name"></label>
	<input asp-for="Name" placeholder="name" />
</div>
<div class="form-group">
	<label asp-for="Age"></label>
	<input asp-for="Age" placeholder="age" />
</div>
<div class="form-group">
	<label asp-for="Email">Email</label>
	<input asp-for="Email" placeholder="email" />
</div>
<div class="form-group">
	<label asp-for="Password">Password</label>
	<input asp-for="Password" placeholder="password" />
</div>
<div class="form-group">
	<label asp-for="DeptNo">Department</label>
	<select asp-for="DeptNo" asp-items="deptsList">
		<option>Select Dept</option>
	</select>

</div>